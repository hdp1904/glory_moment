<%- include("../partials/header") %>
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>

            <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=comment.text %>" name="comment[text]" placeholder="Comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Confirm</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>" >Back</a>
        </div>
    </div>
